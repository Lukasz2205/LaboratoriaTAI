<% headers = ['Name', 'Description', 'Pages', 'Author', 'Price', 'Date'] %>
<%= CSV.generate_line headers %>
<% @books.each do |book| %>
  <%= CSV.generate_line([book.name,
                          book.description,
                          book.pages,
                          book.author,
                          book.price,
                          book.created_at])%>
<% end %>